FROM icoy/kube-combo-base:v0.0.6

ARG DEBIAN_FRONTEND=noninteractive
RUN apt-get update && apt-get install -y \
    strongswan \
    strongswan-swanctl \
    strongswan-charon \
    && rm -rf /etc/ipsec.conf \
    && apt-get clean \
    && apt-get autoremove \
    && rm -rf /var/lib/apt/lists/*

EXPOSE 500/udp 4500/udp

COPY dist/strongswan-setup /
RUN chmod +x *.sh
