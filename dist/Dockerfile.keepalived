FROM icoy/kube-combo-base:v0.0.7

ARG DEBIAN_FRONTEND=noninteractive
RUN apt-get update && \
    apt-get install keepalived -y \
    && apt-get clean \
    && apt-get autoremove \
    && rm -rf /var/lib/apt/lists/*

RUN mkdir -p /etc/keepalived.d
COPY dist/keepalived-setup /
RUN chmod +x /configure.sh
