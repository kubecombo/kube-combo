connections {
{% for conn in connections %}
    gw-gw-{{ conn.name }} {
      version = {{ conn.ikeVersion }}
      local_addrs  = {{ conn.localEIP }}
      remote_addrs = {{ conn.remoteEIP }}
      dpd_delay = 60
      rekey_time = 84600
      over_time = 1800
      proposals = {{ conn.ikeProposals }}
      encap = yes
      mobike = yes

      local {
         auth = {{ conn.auth }}
         id = {{ conn.localCN }}
      }
      remote {
         auth = {{ conn.auth }}
         id = {{ conn.remoteCN }}
      }
      children {
         net-net {
            local_ts = {{ conn.localPrivateCidrs }}
            remote_ts = {{ conn.remotePrivateCidrs }}
            esp_proposals = {{ conn.espProposals }}
            updown = /usr/lib/ipsec/_updown iptables
            mode = tunnel
            rekey_time = 85500
            life_time = 86400
            dpd_action = restart
            start_action = start
            close_action = start
         }
      }
   }
{% endfor %}
}
secrets {
{% for conn in connections %}
{% if loop.first %}
   ike-1 {
      id-1 = {{ conn.localCN }}
      secret = {{ conn.localPSK }}
   }
   ike-11 {
      id-11 = {{ conn.remoteCN }}
      secret = {{ conn.remotePSK }}
   }
{% else %}
   ike-1{{ loop.index }} {
      id-1{{ loop.index }} = {{ conn.remoteCN }}
      secret = {{ conn.remotePSK }}
   }
{% endif %}
{% endfor %}
}

